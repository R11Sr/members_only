
<%= simple_form_for(@post) do |f|%>
  <%= f.error_notification%>
  <div class="field">
    <div class="control">
      <%= f.input :post, label: "Post Here...", input_html: {class: 'textarea is-info has-fixed-size'}, wrapper: false,
        label_html: {class: 'label'}, placeholder: "Post here...", autofocus: true%>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%=f.button :submit, class: "button is-dark"%>
    </div>
  </div>

<% end %>
